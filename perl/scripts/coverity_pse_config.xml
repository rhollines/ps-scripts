<coverity>
  <cim>
    <host>localhost</host>
    <port>8080</port>
    <username>admin</username>
    <password>coverity</password>
  </cim>

  <systems>

    <!-- === Issue Tracking (bts) ====================== -->

    <system id="bugzilla-1" type="bts">
      <plugin>Bugzilla</plugin>
      <url>http://bugzilla.sf.coverity.com</url>
      <username>jcroall@coverity.com</username>
      <password>PASSWORD</password>
      <field id="product">Professional Services</field>
      <field id="bug_severity">minor</field>
      <field id="priority">P4</field>
      <field id="assigned_to">jcroall@coverity.com</field>
      <field id="qa_contact">jcroall@coverity.com</field>
      <!-- apart from %url%, for a placeholder to be valid it must match a
           $defectSummary key in export-defect-handler.pl -->
      <field id="short_desc">CID %cid%: %checker%</field>
      <field id="comment" size="512">File: %file%:%lineNumber%
Function: %functionDisplayName%
Checker: %checker%

%eventTag%: %eventDescription%

Click %url% for more details</field>
      <field id="rep_platform">x86</field>
      <field id="version">unspecified</field>
      <field id="component">Integration Lab Testing</field>
      <field id="op_sys">Linux</field>
    </system>

    <system id="clearquest-1" type="bts">
      <plugin>ClearQuest</plugin>
      <username>cquser</username>
      <password>cqpassword</password>
      <database>CQDB</database>
      <!-- apart from %url%, for a placeholder to be valid it must match a
           $defectSummary key in export-defect-handler.pl -->
      <field id="owner">%owner%</field>
      <field id="headline">CID %cid%: %checker%</field>
      <field id="description" size="512">File: %file%:%lineNumber%
Function: %functionDisplayName%
Checker: %checker%

%eventTag%: %eventDescription%

Click %url% for more details</field>
    </system>

    <system id="Jira" type="bts">
      <plugin>Jira</plugin>
      <url>http://jira-host:8080</url>
      <username>USERNAME</username>
      <password>PASSWORD</password>
      <project>JIRA-PROJECT</project>
      <component>JIRA-COMPONENT</component>
      <!-- apart from %url%, for a placeholder to be valid it must match a
           $defectSummary key in export-defect-handler.pl -->
      <field id="summary">CID %cid%: %checker%</field>
      <field id="description">Coverity Defect

File: %file%:%lineNumber%
Function: %functionDisplayName%

%eventTag%: %eventDescription%

See %url% for details</field>
    </system>

    <system id="teamtrack-1" type="bts">
      <plugin>TeamTrack</plugin>
      <url>http://teamtrack-host:80/gsoap/gsoap_ssl.dll?ttwebservices</url>
      <username>USERNAME</username>
      <password></password>

      <projectID>132</projectID>  <!-- gleaned from html source -->
      <classification>Bug</classification>

      <!-- apart from %url%, for a placeholder to be valid it must match a
           $defectSummary key in export-defect-handler.pl -->
      <title>CID %cid%: %checker%</title>
      <description>Coverity Defect&lt;br&gt;
&lt;br&gt;
File: %file%:%lineNumber%&lt;br&gt;
Function: %functionDisplayName%&lt;br&gt;
&lt;br&gt;
%eventTag%: %eventDescription%&lt;br&gt;</description>

      <!-- the following are all extendedFieldList items -->
      <field id="Product">MYPROJEDCT</field>
      <field id="TESTCASE_ID">N/A</field>
    </system>

    <!-- === Source Code Management (scm) ============== -->

    <system id="svn-1" type="scm">
      <plugin>Subversion</plugin>
      <repository>file:///Users/jcroall/Source/SVN/demo-code/trunk</repository>
      <strip-path>/Users/jcroall/Source/sands/demo-code/</strip-path>
      <!--
      <username>script</username>
      <password>password</password>
      -->
    </system>

    <system id="cvs-1" type="scm">
      <plugin>CVS</plugin>
      <strip-path>/strip/path</strip-path>
    </system>

    <system id="clearcase-1" type="scm">
      <plugin>ClearCase</plugin>
      <strip-path>/strip/path</strip-path>
    </system>

    <system id="accurev-1" type="scm">
      <plugin>Accurev</plugin>
      <repository></repository>
      <strip-path></strip-path>
      <basedir></basedir>
    </system>

    <system id="perforce-1" type="scm">
      <plugin>Perforce</plugin>
      <repository></repository>
      <strip-path>/strip/path</strip-path>
      <username>USERNAME</username>
      <password>PASSWORD</password>
      <p4port>P4PORT</p4port>
    </system>

  </systems>

  <!-- The order of the map elements is important.  We try to match against
       the first pattern and if not successful we try the second, and so on. -->
  <project-mappings>
    <map>
      <!-- pattern must be a perl regexp -->
      <pattern>test</pattern>
      <systems>
        <id>bugzilla-1</id>
        <id>svn-1</id>
      </systems>
    </map>
    <map>
      <!-- pattern must be a perl regexp -->
      <pattern>.*</pattern>
      <systems>
        <id>bugzilla-1</id>
        <id>svn-1</id>
      </systems>
    </map>
  </project-mappings>

  <!-- The order of the map elements is important.  We try to match against
       the first pattern and if not successful we try the second, and so on. -->
  <stream-mappings>
    <map>
      <!-- pattern must be a perl regexp -->
      <pattern>mystream</pattern>
      <systems>
        <id>bugzilla-1</id>
        <id>svn-1</id>
      </systems>
    </map>
    <map>
      <!-- pattern must be a perl regexp -->
      <pattern>.*</pattern>
      <systems>
        <id>bugzilla-1</id>
        <id>svn-1</id>
      </systems>
    </map>
  </stream-mappings>

</coverity>
